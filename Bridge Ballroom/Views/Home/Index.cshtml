@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="main-background">
        <div class="login-form-container">
            <form>
                <div class="form-group login">
                    <input type="text" class="form-control login" id="userName" placeholder="username">
                </div>
                <div class="form-group login">
                    <input type="text" class="form-control login" id="password" placeholder="password">
                </div>
                <button type="submit" class="btn btn-success login">Login</button>
                <div class="register">
                    @Html.ActionLink("Not a member? Sign up now.", "Register", "Home")
                </div>
            </form>
        </div>
</div>

